{{! Partial for a single post }}
<div class="post">
    <div class="post-avatar">
        <!-- the user's avatar -->
        <img src="{{this.user.avatar_url}}" alt="{{this.user.username}}'s avatar">
    </div>
    <div class="post-content preserve-newlines">
        <!-- the post -->
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <div class="post-status-bar">
            <!-- everything that is shown in the status bar -->
            <button class="like-button" data-id="{{this.id}}" onclick="handleLikeClick(event)">â™¥</button>
            {{#ifCond this.user.username ../user.username}}
                <button class="delete-button" data-id="{{this.id}}" onclick="handleDeleteClick(event)"><i class="fas fa-trash-alt"></i></button>
            {{/ifCond}}
        </div>        
    </div>
</div>
<script>

    function handleLikeClick(event) {
        const postId = event.target.getAttribute('data-id');

        // Fetch request to like the post
        fetch(`/posts/${postId}/like`, {
            method: 'POST',
        }).then(response => {
            if (response.ok) {
                // Update the UI to reflect the new like
            } else {
                console.error('Failed to like post');
            }
        });       
    }

    function handleDeleteClick(event) {
        const buttonElement = event.target.closest('.delete-button');
        const postId = buttonElement.getAttribute('data-id');        

        // Fetch request to delete the post
        fetch(`/posts/${postId}`, {
            method: 'DELETE',
        }).then(response => {
            if (response.ok) {
                // Remove the post from the UI
            } else {
                console.error('Failed to delete post');
            }
        });      
        
    }    
</script>